<div class='mt-4'>
  <h3>Đăng khóa học</h3>
    <form method='POST' action='/courses/store'>
        <div class='from-group'>
          <label for='name' >Tên khóa học</label>
          <input type='text' class='form-control' id='name' name='name'>
        </div>
        <div class='from-group'>
          <label for='description' >Mô tả</label>
          <input type='text' class='form-control' id='description' name='description'>
        </div>
        <div class='from-group'>
          <label for='videoId' >Video Id </label>
          <input type='text' class='form-control' id='videoId' name='videoId'>
        </div>
        <div class='from-group'>
          <label for='level' >Trình độ của khóa </label>
          <input type='text' class='form-control' id='level' name='level'>
        </div>
        
        <button type='submit' class='btn btn-primary button'>Thêm khóa học</button>
    </form>

</div>